xterm*termName:        xterm-256color
xterm*faceName:        terminus:size=8
xterm*faceNameDoublesize: IPAPMincho:style=Regular
xterm*dynamicColors:   true
xterm*saveLines:       4096
xterm*scrollKey:       true
xterm*scrollTtyOutput: false
xterm*scrollBar:       false
xterm*rightScrollBar:  true
xterm*jumpScroll:      true
xterm*multiScroll:     true
XTerm*locale:          true

! URxvt ----------------------------------------------------------------------

! scrollbar style - rxvt (default), plain (most compact), next, or xterm
! URxvt.scrollstyle: xterm
URxvt.scrollBar: false
URxvt.font: xft:Terminess Powerline:size=9

! terminal colors ------------------------------------------------------------

! tangoesque scheme
*background: #151515
*foreground: #a5a2a2
! Black (not tango) + DarkGrey
*color0:  #090300
*color8:  #5c5855
! DarkRed + Red
*color1:  #db2d20
*color9:  #eb5d50
! DarkGreen + Green
*color2:  #01a252
*color10: #41b282
! DarkYellow + Yellow
*color3:  #fded02
*color11: #ffff42
! DarkBlue + Blue
*color4:  #01a0e4
*color12: #51bef4
! DarkMagenta + Magenta
*color5:  #a16a94
*color13: #c19aa4
!DarkCyan + Cyan (both not tango)
*color6:  #b5e4f4
*color14: #c5ffff
! LightGrey + White
*color7:  #a5a2a2
*color15: #e6e5e4
